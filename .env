# E-Cast Voting System - Environment Configuration
# Copy this file to .env and update with your production values

# Application Environment
ENVIRONMENT=production
APP_NAME="E-Cast Voting System"
APP_URL=https://baroncast.online
APP_DEBUG=false

# Database Configuration
DB_HOST=localhost
DB_PORT=3306
DB_NAME=baroncast
DB_USERNAME=root
DB_PASSWORD=

# Security Settings
SESSION_LIFETIME=7200
CSRF_TOKEN_LIFETIME=3600
PASSWORD_MIN_LENGTH=8
MAX_LOGIN_ATTEMPTS=5
LOCKOUT_DURATION=900

# Payment Gateway Configuration
# Arkesel API
ARKESEL_API_KEY=your_arkesel_api_key
ARKESEL_API_URL=https://sms.arkesel.com/api/v2
ARKESEL_SENDER_ID=YourSenderID

# JuniPay API
JUNIPAY_API_KEY=your_junipay_api_key
JUNIPAY_CLIENT_ID=your_junipay_client_id
JUNIPAY_API_URL=https://api.junipayments.com
JUNIPAY_PRIVATE_KEY_PATH=/path/to/junipay/private.key

# Email Configuration
MAIL_HOST=smtp.gmail.com
MAIL_PORT=587
MAIL_USERNAME=your_email@domain.com
MAIL_PASSWORD=your_email_password
MAIL_ENCRYPTION=tls
MAIL_FROM_ADDRESS=noreply@yourdomain.com
MAIL_FROM_NAME="E-Cast Voting System"

# File Upload Settings
MAX_FILE_SIZE=5242880
ALLOWED_IMAGE_TYPES=jpg,jpeg,png,gif,webp
UPLOAD_PATH=/uploads

# Logging Configuration
LOG_LEVEL=error
LOG_FILE_PATH=/logs
ENABLE_AUDIT_LOGGING=true
ENABLE_PAYMENT_LOGGING=true

# Cache Settings
CACHE_DRIVER=file
CACHE_LIFETIME=3600

# Rate Limiting
RATE_LIMIT_ENABLED=true
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_WINDOW=3600

# Backup Configuration
BACKUP_ENABLED=true
BACKUP_SCHEDULE=daily
BACKUP_RETENTION_DAYS=30
BACKUP_PATH=/backups
